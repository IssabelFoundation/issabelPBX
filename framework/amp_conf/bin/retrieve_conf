if ($amp_conf['ARI_ADMIN_PASSWORD'] == $issabelpbx_conf->get_conf_default_setting('ARI_ADMIN_PASSWORD')) {
    if (!$nt->exists('ari', 'ARI_ADMIN_PASSWORD')) {
