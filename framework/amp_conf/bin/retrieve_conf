    $issabelpbx_conf->define_conf_setting('AST_FUNC_PRESENCE_STATE',$set);
}
if (!$issabelpbx_conf->conf_setting_exists('AST_FUNC_SHARED')) {
    // AST_FUNC_SHARED
    //
    $set['value'] = '';
    $set['defaultval'] =& $set['value'];
    $set['options'] = '';
    $set['readonly'] = 1;
    $set['hidden'] = 1;
